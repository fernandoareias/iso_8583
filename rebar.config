{erl_opts, [
    debug_info,
    warn_export_vars,
    warn_shadow_vars,
    warn_obsolete_guard,
    warnings_as_errors
]}.

{deps, [
    {lager, "3.9.2"}
]}.



{shell, [
    %% {config, "config/sys.config"},
    {apps, [iso_8583]}
]}.

{plugins, [                       
    {rebar3_proper, "0.12.1"},    
    {rebar3_lint, "4.0.0"}
]}.

{project_plugins, [rebar3_format]}.

{alias, [
    {test, [{format, "--verify"}, eunit, ct, cover]}
]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

%% EDoc configuration
{edoc_opts, [
    {preprocess, true},
    {includes, ["include"]},
    {dir, "doc"}
]}.

%% Dialyzer configuration
{dialyzer, [
    {warnings, [
        error_handling,
        race_conditions,
        unmatched_returns,
        underspecs
    ]},
    {plt_extra_apps, [kernel, stdlib]}
]}.

%% Directory structure
{src_dirs, ["src", "src/converters", "src/fields", "src/marshallers", "src/utils"]}.
{extra_src_dirs, ["test"]}.